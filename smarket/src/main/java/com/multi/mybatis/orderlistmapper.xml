<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.multi.mapper.OrderlistMapper">
	
	<select id="select" parameterType="Integer" resultType="orderlistDTO">
		SELECT * FROM orderlist WHERE id=#{id}
	</select>
	<select id="selectall" resultType="orderlistDTO">
		SELECT * FROM orderlist
	</select>
	<insert id="insert" parameterType="orderlistDTO">
		INSERT INTO orderlist VALUES (NULL,#{custid},#{shipid},#{orderstatus},NOW(),#{totalprice})
	</insert>
	<update id="update" parameterType="orderlistDTO">
		UPDATE orderlist SET orderstatus=#{orderstaus},orderdate=NOW(),totalprice=#{totalprice} WHERE id=#{id}
	</update>
	<delete id="delete" parameterType="Integer">
		DELETE FROM orderlist WHERE id=#{id}
	</delete>
	
</mapper>